#setup
dice = ["⚀", "⚁", "⚂", "⚃", "⚄", "⚅"]
liste_couleur = ["rouge", "r", "vert", "v", "jaune", "j", "bleu", "b"]


def game_no_bot():
    global active_player, dice_value

    # [Initialisation provisoire]
    fiche_joueurs = [[[], [], [], [], 0] for i in range(4)]
    ordre_joueur = ["moi", "moi2", "moi3", "eris"]

    # Start
    running = True
    while running:
        for player_number, active_player in enumerate(ordre_joueur):

            # Set up player_fiche and skip
            player_fiche = fiche_joueurs[player_number]
            print(active_player, player_fiche)

            # Trow dice
            # dice_value = dice_base
            dice = combine_dice()
            print(f"le valeur de dé blancs: {dice}\n")

            # Passive players
            for player_num, player in enumerate(ordre_joueur):
                    if player != active_player :
                        fiche = play(player, fiche_joueurs[player_num], dice)
                        print(f"{player} : {fiche}\n")
            player_fiche = play(active_player, player_fiche, dice)
            print(f"active player : {player_fiche}\n")
            

game_no_bot()
